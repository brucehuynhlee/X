<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a8.group.ttnm.x.view.EditContact">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="300px">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/person"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <ImageButton
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_search"
                android:id="@+id/imageButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"  />

        </RelativeLayout>
        <ScrollView
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TaLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--Phone Name-->
                <LinearLayout
                    android:layout_marginTop="@dimen/phone_edit"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:src="@mipmap/dial_3"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/contact_name"
                            android:ems="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <!--Phone Number-->
                <LinearLayout
                    android:layout_marginTop="@dimen/phone_edit"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.28"
                        android:src="@android:drawable/stat_sys_phone_call_forward"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/phone_number"
                            android:ems="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <!--Email-->
                <LinearLayout
                    android:layout_marginTop="@dimen/phone_edit"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:src="@android:drawable/sym_action_email"
                        android:id="@+id/imageView2" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/phone_email"
                            android:ems="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <!--Email-->
                <LinearLayout
                    android:layout_marginTop="@dimen/phone_edit"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:src="@android:drawable/sym_action_email"
                        android:id="@+id/imageView3" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/phone_emaifl"
                            android:ems="10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </TaLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
