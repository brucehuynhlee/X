<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_phone_calling"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:background="@color/colorDialPad"
	tools:context="a8.group.ttnm.x.view.PhoneCalling">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
			<ListView
				android:layout_weight="1"
				android:id="@+id/listOptions"
				android:layout_width="match_parent"
				android:layout_height="100px">
			</ListView>
	</LinearLayout>
	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_alignParentBottom="true" >
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<android.support.v7.widget.CardView
				android:id="@+id/card_view"
				android:background="#aaaaaa"
				xmlns:card_view="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				card_view:cardBackgroundColor="#ffffff"
				card_view:cardElevation="4dp">
				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="60dp">
					<ImageButton
						style="?android:buttonBarButtonStyle"
						android:layout_toLeftOf="@+id/txtPhoneNumber"
						android:background="@color/colorBackGroundFinal"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@android:drawable/ic_input_add"
						android:layout_weight="1"
						android:id="@+id/btnAddContact" />
					<EditText
                        android:maxLength="16"
						android:paddingTop="10px"
                        android:paddingBottom="10px"
                        android:paddingLeft="30px"
                        android:paddingRight="30px"
						android:hint="Nhập số điện thoại"
                        android:textSize="18dp"
						android:id="@+id/txtPhoneNumber"
						android:layout_weight="3"
						android:imeOptions="actionDone"
						android:inputType="phone"
						android:singleLine="true"
						android:layout_width="match_parent"
						android:layout_height="match_parent"/>

					<ImageButton
                        style="?android:buttonBarButtonStyle"
                        android:layout_toRightOf="@+id/txtPhoneNumber"
						android:background="@color/colorBackGroundFinal"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:src="@mipmap/ic_backspace"
						android:layout_weight="1"
						android:id="@+id/btnDeleteNumber" />
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<TableLayout
				android:layout_gravity="center_horizontal"
				android:id="@+id/layoutDialpad"
				android:background="@color/colorDialPad"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true">
				<TableRow>
					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_1"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_1"/>

					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_2"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_2"/>
					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_3"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_3"/>
				</TableRow>
				<TableRow>

					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_4"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_4"/>

					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_5"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_5"/>

					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_6"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_6"/>
				</TableRow>
				<TableRow>
					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_7"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_7"/>

					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_8"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_8"/>
					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_9"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_9"/>
				</TableRow>
				<TableRow>

					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_3"
						android:layout_weight="1"
						android:src="@mipmap/dial_3"/>

					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_num_0"
						android:layout_weight="1"
						android:src="@mipmap/dial_num_0"/>
					<ImageButton
						android:layout_height="@dimen/dialpad_height"
						android:background="@color/colorDialPad"
						android:id="@+id/dial_8"
						android:layout_weight="1"
						android:src="@mipmap/dial_8"/>
				</TableRow>
				<android.support.design.widget.FloatingActionButton
					android:id="@+id/fabCalling"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|center"
					android:src="@android:drawable/ic_menu_call"/>
			</TableLayout>
		</LinearLayout>
	</RelativeLayout>




</RelativeLayout>