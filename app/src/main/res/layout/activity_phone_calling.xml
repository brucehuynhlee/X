<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_calling"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorDialPad"
    tools:context="a8.group.ttnm.x.view.PhoneCalling">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ListView
                android:layout_weight="1"
                android:id="@+id/listOption"
                android:layout_width="match_parent"
                android:layout_height="100px">
            </ListView>
    </LinearLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true" >
        <TableLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/layoutDialpad"
            android:background="@color/colorDialPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TableRow>
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtNumber"
                    android:layout_width="match_parent"
                    android:text="0"
                    android:textSize="40dp"
                    android:layout_span="4"
                    android:background="#ffffff"
                    android:layout_height="@dimen/dialpad_height">

                </android.support.design.widget.TextInputEditText>
            </TableRow>
            <TableRow>
                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_1"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_1"/>

                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_2"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_2"/>
                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_3"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_3"/>
            </TableRow>
            <TableRow>
                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_4"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_4"/>

                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_5"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_5"/>

                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_6"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_6"/>
            </TableRow>
            <TableRow>
                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_7"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_7"/>

                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_8"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_8"/>
                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_9"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_9"/>
            </TableRow>
            <TableRow>

                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_3"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_3"/>

                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_num_0"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_num_0"/>
                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:id="@+id/dial_8"
                    android:layout_weight="1"
                    android:src="@mipmap/dial_8"/>
            </TableRow>

            <TableRow>
                <ImageButton
                    android:layout_height="@dimen/dialpad_height"
                    android:background="@color/colorDialPad"
                    android:layout_column="1"
                    android:id="@+id/dial_back"
                    android:src="@mipmap/dial_delete"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>




</RelativeLayout>